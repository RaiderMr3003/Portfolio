---
import { Github, Globe } from 'lucide-astro';

const projects = [
  {
    title: "Autoviaje",
    description: "Travel Autorization Generation System - System created for Notar√≠a Delgado, Peru.",
    image: "/public/projects/autoviaje.webp",
    tags: ["PHP", "JavaScript", "Bootstrap", "HTML", "CSS"],
    link: "https://github.com/RaiderMr3003/AutoViaje",
    code: "https://github.com/RaiderMr3003/AutoViaje"
  },
  {
    title: "RaidersitoV1.0",
    description: "Multi-functional Discord bot, created by me, to practice my Python skills.",
    image: "/public/projects/raidersito.webp",
    tags: ["Python"],
    link: "https://github.com/RaiderMr3003/RaidersitoV1.0",
    code: "https://github.com/RaiderMr3003/RaidersitoV1.0"
  },
  {
    title: "Portfolio",
    description: "Portfolio created with Astro to showcase my skills and experience.",
    image: "/public/projects/portfolio.webp",
    tags: ["Astro", "TailwindCSS", "JavaScript", "HTML", "CSS"],
    link: "https://github.com/RaiderMr3003/Portfolio",
    code: "https://github.com/RaiderMr3003/Portfolio"
  }
];
---

<section id="Projects" class="py-10 text-white min-h-[740px]">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-14 text-center">
      <span class="font-fcb text-[#EDBB00]">My Projects</span>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(({ title, description, image, tags, link, code }) => (
        <div class="bg-[#00205B]/50 rounded-lg overflow-hidden border border-[#EDBB00]/20 hover:border-[#EDBB00] transition-colors group">
          <div class="relative h-48 overflow-hidden">
            <img 
              src={image} 
              alt={title} 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-[#00205B] to-transparent opacity-70"></div>
          </div>
          <div class="p-6">
            <h3 class="font-fcb text-xl font-bold mb-2 text-[#EDBB00]">{title}</h3>
            <p class="text-gray-300 mb-4">{description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {tags.map(tag => (
                <span class="font-fcb bg-[#A50044]/30 px-2 py-1 rounded text-xs">{tag}</span>
              ))}
            </div>
            <div class="font-fcb flex gap-3">
              <a href={link} class="text-[#EDBB00] hover:underline flex items-center gap-1">
                <Globe size={16} /> Link
              </a>
              <a href={code} class="text-[#EDBB00] hover:underline flex items-center gap-1">
                <Github size={16} /> Code
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
